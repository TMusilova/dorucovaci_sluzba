@model DorucovaciSluzba.Domain.Entities.Zasilka

@{
    ViewData["Title"] = "Detail zásilky";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="card shadow mb-4">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0 text-center">Zásilka číslo: @Model.Cislo</h3>
                </div>
                <div class="card-body">

                    <!-- TODO: Přidat obrázek podle stavu -->

                    <!-- AKTUÁLNÍ STAV -->
                    <div class="text-center mb-4">
                        <h4 class="mb-2">
                            <i class="bi bi-info-circle-fill"></i>
                            Stav: <strong>@Model.Stav?.Stav</strong>
                        </h4>
                    </div>

                    <!-- INFORMACE O ZÁSILCE -->
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h5>Datum odeslání</h5>
                            <p>@Model.DatumOdeslani.ToString("dd.MM.yyyy HH:mm")</p>
                        </div>
                    </div>

                    <hr />

                    <!-- ODESÍLATEL -->
                    <h5 class="text-primary">Odesílatel</h5>
                    <p class="mb-1"><strong>Jméno:</strong> @Model.Odesilatel?.Jmeno @Model.Odesilatel?.Prijmeni</p>
                    <p class="mb-1"><strong>E-mail:</strong> @Model.Odesilatel?.Email</p>
                    <p class="mb-3">
                        <strong>Adresa:</strong>
                        @Model.Odesilatel?.Ulice @Model.Odesilatel?.CP,
                        @Model.Odesilatel?.Mesto, @Model.Odesilatel?.Psc
                    </p>

                    <hr />

                    <!-- PŘÍJEMCE -->
                    <h5 class="text-dark">Příjemce</h5>
                    <p class="mb-1"><strong>Jméno:</strong> @Model.Prijemce?.Jmeno @Model.Prijemce?.Prijmeni</p>
                    <p class="mb-1"><strong>E-mail:</strong> @Model.Prijemce?.Email</p>
                    <p class="mb-3">
                        <strong>Adresa doručení:</strong>
                        @Model.DestinaceUlice @Model.DestinaceCP,
                        @Model.DestinaceMesto, @Model.DestinacePsc
                    </p>

                    @if (Model.Kuryr != null)
                    {
                        <hr />
                        <h5 class="text-secondary">Kurýr</h5>
                        <p class="mb-1"><strong>Jméno:</strong> @Model.Kuryr.Jmeno @Model.Kuryr.Prijmeni</p>
                        <p class="mb-1"><strong>E-mail:</strong> @Model.Kuryr.Email</p>
                    }

                </div>
                <div class="card-footer text-center">
                    <a asp-action="Track" class="btn btn-primary">
                        Vyhledat jinou zásilku
                    </a>
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                        Domů
                    </a>
                </div>
            </div>

        </div>
    </div>
</div>