@model DorucovaciSluzba.Models.Package.TrackPackageViewModel

@{
    ViewData["Title"] = "Sledování zásilky";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-dark text-white text-center">
                    <h3 class="mb-0">Sledování zásilky</h3>
                </div>
                <div class="card-body p-4">

                    @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ErrorCount > 0)
                    {
                        <div class="alert alert-danger">
                            @Html.ValidationSummary(false, "", new { @class = "mb-0" })
                        </div>
                    }

                    <form asp-action="Track" method="post">
                        <div class="mb-4">
                            <label asp-for="CisloZasilky" class="form-label fw-bold"></label>
                            <input asp-for="CisloZasilky"
                                   class="form-control"
                                   placeholder="123-45-67"
                                   maxlength="11" />
                            <span asp-validation-for="CisloZasilky" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Email" class="form-label fw-bold"></label>
                            <input asp-for="Email"
                                   type="email"
                                   class="form-control"
                                   placeholder="vas@email.cz" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-search"></i> Vyhledat zásilku
                            </button>
                            <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                                Zpět na úvodní stránku
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}