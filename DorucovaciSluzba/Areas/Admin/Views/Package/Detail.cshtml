@model DorucovaciSluzba.Domain.Entities.Zasilka

@{
    ViewData["Title"] = "Detail zásilky";
    var odesilatel = ViewBag.Odesilatel as DorucovaciSluzba.Infrastructure.Identity.User;
    var prijemce = ViewBag.Prijemce as DorucovaciSluzba.Infrastructure.Identity.User;
    var kuryr = ViewBag.Kuryr as DorucovaciSluzba.Infrastructure.Identity.User;
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0 text-center">Zásilka číslo: @Model.Cislo</h3>
                </div>
                <div class="card-body">
                    <!-- AKTUÁLNÍ STAV -->
                    <div class="text-center mb-4">
                        <h4 class="mb-2">
                            <i class="bi bi-info-circle-fill"></i>
                            Stav: <strong>@Model.Stav?.Stav</strong>
                        </h4>
                    </div>

                    <!-- INFORMACE O ZÁSILCE -->
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h5>Datum odeslání</h5>
                            <p>@Model.DatumOdeslani.ToString("dd.MM.yyyy HH:mm")</p>
                        </div>
                    </div>

                    <hr />

                    <!-- ODESÍLATEL -->
                    <h5 class="text-primary">Odesílatel</h5>
                    <p class="mb-1"><strong>Jméno:</strong> @odesilatel?.FirstName @odesilatel?.LastName</p>
                    <p class="mb-1"><strong>E-mail:</strong> @odesilatel?.Email</p>
                    @if (!string.IsNullOrEmpty(odesilatel?.Ulice))
                    {
                        <p class="mb-3">
                            <strong>Adresa:</strong>
                            @odesilatel.Ulice @odesilatel.CP,
                            @odesilatel.Mesto, @odesilatel.Psc
                        </p>
                    }

                    <hr />

                    <!-- PŘÍJEMCE -->
                    <h5 class="text-dark">Příjemce</h5>
                    <p class="mb-1"><strong>Jméno:</strong> @prijemce?.FirstName @prijemce?.LastName</p>
                    <p class="mb-1"><strong>E-mail:</strong> @prijemce?.Email</p>
                    <p class="mb-3">
                        <strong>Adresa doručení:</strong>
                        @Model.DestinaceUlice @Model.DestinaceCP,
                        @Model.DestinaceMesto, @Model.DestinacePsc
                    </p>

                    @if (kuryr != null)
                    {
                        <hr />
                        <h5 class="text-secondary">Kurýr</h5>
                        <p class="mb-1"><strong>Jméno:</strong> @kuryr.FirstName @kuryr.LastName</p>
                        <p class="mb-1"><strong>E-mail:</strong> @kuryr.Email</p>
                        @if (!string.IsNullOrEmpty(kuryr.Telefon))
                        {
                            <p class="mb-1"><strong>Tel. číslo:</strong> @kuryr.Telefon</p>
                        }
                    }
                </div>
                <div class="card-footer text-center">
                    <a asp-action="Track" class="btn btn-primary">
                        Vyhledat jinou zásilku
                    </a>
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                        Domů
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>